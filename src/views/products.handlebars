<div class="container mt-4">
  <h1>Products</h1>
  <div class="row productsContainer">
    {{#each products}}
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">{{title}}</h2>
            <p class="card-text">{{description}}</p>
            <p class="card-text">Price: ${{price}}</p>
            <p class="card-text">Category: {{category}}</p>
            <button class="btn btn-primary">Add to Cart</button>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
        <div class="row">
            <div class="col-md-5 text-end">
                {{#if hasPrevPage}}
                    <a href="/products?page={{prevPage}}" class="text-decoration-none">Previous</a>
                {{/if}}
            </div>
            <div class="col-md-2 text-center">
                <p class="mb-0">Page {{currentPage}} of {{totalPages}}</p>
            </div>
            <div class="col-md-5">
                {{#if hasNextPage}}
                    <a href="/products?page={{nextPage}}" class="text-decoration-none">Next</a>
                {{/if}}
            </div>
        </div>
    </div>
</div>